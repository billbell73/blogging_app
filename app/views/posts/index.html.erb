<% @posts.each do |post| %>

<h1><%= post.title %></h1>

<%= post.body %>
<%= link_to 'Edit', edit_post_path(post) %>

<% post.comments.each do |comment | %>
<br>
<strong><%= comment.body %></strong>
<% end %>



<%= link_to 'Add comment', new_post_comment_path(post) %>

<% end %>

<%= link_to 'Create Post', new_post_path %>

